FROM ubuntu:16.04

RUN apt-get update

# install Faucet
RUN apt-get install python3-dev python3-pip -y \
    && pip3 install setuptools \
    && pip3 install wheel \
    && apt-get install wget git -y 

RUN pip3 install faucet

# Install faucetagent
COPY ./  /pegler/
RUN git clone https://github.com/faucetsdn/faucetagent.git \
    && cd /faucetagent && sed -i "s/sudo//g" dependencies.sh && ./dependencies.sh
RUN  cd /faucetagent && make

# faucetagent uses fuser utility for reloading faucet.yaml file
RUN apt install psmisc 

ExPOSE 6653

CMD faucet #/etc/init.d/ssh start && faucet 

